<div class="actions clearfix">
  <div class="pull-left span8">
    <label style="display: inline-block; float: none;">Order</label>
    <%= select_tag(:wf_order, options_for_select(wf_filter.condition_options, wf_filter.order), {:onChange=>"markDirty()", :class => 'span4'}) %>
    &nbsp;&nbsp;
    <%= select_tag(:wf_order_type, options_for_select(wf_filter.order_type_options, wf_filter.order_type), {:onChange=>"markDirty()", :class => 'span2' }) %>
    &nbsp;&nbsp;
    <label style="display: inline-block; float: none;">Per Page</label>
    <%= select_tag(:wf_per_page, options_for_select(wf_filter.per_page_options, wf_filter.per_page.to_s), {:onChange=>"markDirty()", :class => 'span2' }) %>
  </div>
  <div class="pull-right">
    <%=link_to_function("Submit".html_safe, "wfFilter.submit()", :class => "btn btn-primary") %>
    <%=link_to_function("&plus; Add".html_safe, "wfFilter.addCondition()", :class => "btn") %>
    <%=link_to_function("Clear".html_safe, "wfFilter.removeAllConditions()", :class => "btn btn-warning") %>
  </div>
</div>

<div>
  <span id="wf_loader" class="spinner" style="display:none;">
    <%=image_tag "will_filter/spinner.gif" %> Loading...
  </span>
</div>
